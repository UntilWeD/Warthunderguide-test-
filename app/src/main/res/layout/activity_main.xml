<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/titlepicture">

    <TextView
        android:id="@+id/maintitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="원하는 나라를 선택하세요"
        android:background="@drawable/titletext"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#696969"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="200dp">
        <ImageView
            android:id="@+id/titleamerica"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/titleamerica"
            android:adjustViewBounds="true"
            android:layout_margin="10dp">
        </ImageView>
        <ImageView
            android:id="@+id/titlegermany"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/titlegermany"
            android:adjustViewBounds="true"
            android:layout_margin="10dp">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/titlesoviet"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/titlesoviet"
            android:adjustViewBounds="true"
            android:layout_margin="10dp">
        </ImageView>

        <ImageView
            android:id="@+id/titleenglad"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:src="@drawable/titleengland"
            android:adjustViewBounds="true"
            android:layout_margin="10dp">
        </ImageView>


    </LinearLayout>

</LinearLayout>


